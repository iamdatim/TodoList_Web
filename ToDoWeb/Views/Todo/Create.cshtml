@model Todo


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create New Todo</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="DueDate"></label>
            <input asp-for="DueDate" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="PriorityLevel"></label>
            <input asp-for="PriorityLevel" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Todo" asp-action="Todolist" class="btn btn-outline-primary" style="width:150px">Back to List</a>
    </div>
</form> 