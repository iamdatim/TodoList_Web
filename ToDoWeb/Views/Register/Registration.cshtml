@model User
@*
@{
    ViewData["Title"] = "Registration";
}*@

<br />





<div clsss="text-center bg-primary" id="registration-container">
    <form method="post">
        <fieldset>
            @*  <legend>Legend</legend>*@
            <div class="form-group row">
                <div class="row pb-2">
                    <h2 class="text-primary"> Registration Page</h2>
                </div>
                
                @* <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>*@
                @*<div class="col-sm-10">
                <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="email@example.com">
                </div>*@
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label mt-4">Full Name</label>
                <input type="text" asp-for="Fullname" class="form-control" placeholder="Enter your Full Name">
                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label mt-4">Username</label>
                <input type="text" asp-for="Username" class="form-control" placeholder="Enter your Username">
                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
                <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
                <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Register</button>

        </fieldset>
    </form>
</div>